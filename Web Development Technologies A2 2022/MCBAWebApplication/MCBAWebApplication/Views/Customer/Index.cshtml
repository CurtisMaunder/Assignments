@model Customer
@{
    ViewData["Title"] = "Accounts";
}

<div>
    <h1 class="display-4">Welcome, @Model.Name</h1>
    
    <h3>Your Accounts</h3>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].AccountNumber)</th>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].AccountType)</th>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].Balance)</th>
            <th></th>
        </tr>
        @foreach(var account in Model.Accounts) {
            <tr>
                <td>@Html.DisplayFor(x => account.AccountNumber)</td>
                <td>@Html.DisplayFor(x => account.AccountType)</td>
                <td>@Html.DisplayFor(x => account.Balance)</td>
                <td>
                    <a class="btn btn-primary"
                        asp-controller="Deposit" asp-action="Index" asp-route-id="@account.AccountNumber">Deposit</a>

                    <a class="btn btn-primary"
                        asp-controller="Withdraw" asp-action="Index" asp-route-id="@account.AccountNumber">Withdraw</a>

                    <a class="btn btn-primary"
                        asp-controller="Transfer" asp-action="Index" asp-route-id="@account.AccountNumber">Transfer</a>

                    <a class="btn btn-primary"
                        asp-action="MyStatements" asp-route-id="@account.AccountNumber">MyStatements</a>

                    <a class="btn btn-primary"
                        asp-controller="BillPay" asp-action="Index" asp-route-id="@account.AccountNumber">BillPay</a>
                </td>
            </tr>
        }
    </table>
    <a class="btn btn-primary"
        asp-action="MyProfile">MyProfile</a>
</div>