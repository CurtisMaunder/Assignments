@model Login
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Admin Web Portal</h1>
</div>

<div class="h-100 row align-items-center">
        <div class="col-md-4">
            <form asp-action="Index">
                <div class="form-group">
                    <label for="username" class="control-label">Username</label>
                    <input id ="username" name="username" class="form-control" 
                        data-val="true" data-val-required="Username required"/>                    
                </div>
                <div class="form-group">
                    <label for="password" class="control-label">Password</label>
                    <input id ="password" name="password" type="password" class="form-control" 
                        data-val="true" data-val-required="Password required"/>                  
                </div>
                <div class ="form-group">
                    <input type="submit" id="Login" value="Login" class="btn-primary btn-primary" />
                </div>
                @Html.ValidationMessage("LoginFailed", new {@class = "text-danger"})
            </form>
        </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}