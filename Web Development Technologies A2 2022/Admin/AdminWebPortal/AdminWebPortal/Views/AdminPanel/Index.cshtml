@model List<Customer>
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="text-center">
    <h1 class="display-4">Welcome Administrator</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Search">
                <div class="form-group">
                    <label for="customerID" class="control-label">CustomerID</label>
                    <input id ="customerID" name="customerID" class="form-control" 
                        data-val="true" data-val-required="CustomerID required"/>                    
                </div>
                <div class ="form-group">
                    <input type="submit" value="Search" class="btn-primary btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @foreach (var customer in Model) {
       @Html.DisplayFor(x => customer.Name);
    }
</div>